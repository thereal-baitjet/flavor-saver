
 <br>
    <div class="container">
 <div class="row">

        <form id="dateform">
          <input type="text" id="datepicker" class="datepicker">
          <label for="datepicker">Please select a date to plan your meals</label>
          <input type="submit" class="btn btn-success" value="Go!">
        </form>
      </div>

       <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Breakfast</span>
          <p id="breakfast-text"> {{ day.breakfast }}</p>
        </div>
        <div class="card-action">
          <button class="editBreakfast btn modal-trigger" data-target="modal1"> +Edit this meal</button>
          <a href="#"> View Recipe</a>
        </div>
      </div>
    </div>
     <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Lunch</span>
          <p id="lunch-text"> {{ day.lunch }}</p>
        </div>
        <div class="card-action">
          <button class="editLunch btn modal-trigger" data-target="modal1"> +Edit this meal</button>
          <a href="#"> View Recipe</a>
        </div>
      </div>
    </div>
     <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Dinner</span>
          <p id="dinner-text"> {{ day.dinner }}</p>
        </div>
        <div class="card-action">
          <button class="editDinner btn modal-trigger" data-target="modal1"> +Edit this meal</button>
          <a href="#"> View Recipe</a>
        </div>
      </div>
    </div>
     <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Snack</span>
          <p id="snack-text"> {{ day.snack }}</p>
        </div>
        <div class="card-action">
          <button class="editSnack btn modal-trigger" data-target="modal1"> +Edit this meal</button>
          <a href="#"> View Recipe</a>
        </div>
      </div>
    </div>
  </div>
       </div>

